<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.myapplication.restaurant.InsertReviewFragment2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_review2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/Rwrite_letter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:text="Anything else?"
                android:textSize="40px" />


            <EditText
                android:id="@+id/android_textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Rwrite_letter2"
                android:layout_marginTop="70dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="여기에 작성해주세요."
                android:padding="26dp"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <at.markushi.ui.CircleButton
                android:id="@+id/RWrite_cam"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_below="@id/android_textview_border"
                android:layout_marginTop="30dp"
                android:onClick="CamOnClick"
                android:src="@drawable/ic_camera"
                app:cb_color="#7777FF"

                app:cb_pressedRingWidth="8dip" />

            <at.markushi.ui.CircleButton
                android:id="@+id/RWrite_btn2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_below="@id/android_textview_border"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_next"
                app:cb_color="#88FF88"
                app:cb_pressedRingWidth="8dip" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
